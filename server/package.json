{
  "name": "server",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "prismix:run": "npx prismix && prisma format",
    "migrate": "npx prisma migrate dev",
    "prismix:run:migrate": "npm run prismix:run && npm run migrate",
    "server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "server:prod": "env-cmd -f .env.production ts-node-dev --respawn --transpile-only src/server.ts",
    "generate": "graphql-codegen --config codegen.yml",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/server.js",
    "prisma:studio": "npx prisma studio"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.2.0",
    "@graphql-codegen/typescript": "2.2.1",
    "@graphql-codegen/typescript-resolvers": "2.2.0",
    "@graphql-tools/graphql-file-loader": "^7.1.0",
    "@types/node": "^16.7.13",
    "dotenv": "^10.0.0",
    "prisma": "^3.0.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@graphql-codegen/typescript": "^2.2.1",
    "@graphql-codegen/typescript-operations": "^2.1.4",
    "@graphql-codegen/typescript-resolvers": "^2.2.0",
    "@graphql-tools/load": "^7.3.0",
    "@prisma/client": "^3.0.1",
    "apollo-server": "^3.3.0",
    "graphql": "^15.5.3",
    "graphql-scalars": "^1.10.1",
    "prismix": "^1.0.18",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8"
  }
}
